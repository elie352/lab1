<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fillHeight="false" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.miniproject3.controllers.ProductsController">
    <children>
        <VBox prefHeight="507.0" prefWidth="320.0">
            <children>
                <GridPane prefHeight="320.0" prefWidth="320.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120.0" />
                        <ColumnConstraints prefWidth="190.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="46.0" />
                        <RowConstraints prefHeight="130.0" />
                        <RowConstraints prefHeight="34.0" />
                        <RowConstraints prefHeight="34.0" />
                        <RowConstraints prefHeight="34.0" />
                        <RowConstraints prefHeight="34.0" />
                        <RowConstraints prefHeight="34.0" />
                        <RowConstraints prefHeight="34.0" />
                    </rowConstraints>

                    <children>
                        <Label alignment="CENTER" prefHeight="72.0" prefWidth="288.0"
                               text="Fruit  Vegetable Shop"
                               textAlignment="CENTER" textFill="#4CAF50" GridPane.columnSpan="2">
                            <font>
                                <Font name="Tahoma Bold" size="28.0" />
                            </font>
                        </Label>

                        <ImageView fitHeight="130.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true"
                                   GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                            <image>
                                <Image url="@../images/fruits.png" />
                            </image>
                        </ImageView>

                        <Label text="Name:" GridPane.rowIndex="2">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <TextField fx:id="nameFld" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Category:" GridPane.rowIndex="3">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <ComboBox fx:id="categoryCombo" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                  promptText="Select category" prefWidth="190.0"/>

                        <Label text="Price/kg:" GridPane.rowIndex="4">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <TextField fx:id="priceFld" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Origin:" GridPane.rowIndex="5">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <TextField fx:id="originFld" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="Quantity (kg):" GridPane.rowIndex="6">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <TextField fx:id="quantityFld" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                        <Label text="Supplier:" GridPane.rowIndex="7">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <TextField fx:id="supplierFld" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                        <Label text="Organic:" GridPane.rowIndex="8">
                            <font><Font name="Arial" size="16.0"/></font>
                        </Label>
                        <CheckBox fx:id="organicChk" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="25.0">
                    <children>
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addProduct"
                                prefHeight="30.0" prefWidth="90.0"
                                style="-fx-background-color: #4CAF50;" text="Add" textFill="WHITE">
                            <font><Font name="Arial Bold" size="12.0"/></font>
                        </Button>
                        <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updateProduct"
                                prefHeight="30.0" prefWidth="90.0"
                                style="-fx-background-color: #2196F3;" text="Update" textFill="WHITE">
                            <font><Font name="Arial Bold" size="12.0"/></font>
                        </Button>
                        <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteProduct"
                                prefHeight="30.0" prefWidth="90.0"
                                style="-fx-background-color: #f44336;" text="Delete" textFill="WHITE">
                            <font><Font name="Arial Bold" size="12.0"/></font>
                        </Button>
                    </children>
                </HBox>

                <Text fx:id="errorMsg" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0"
                      wrappingWidth="286.0">
                    <font><Font name="Arial Bold" size="12.0"/></font>
                </Text>
            </children>
        </VBox>

        <TableView fx:id="productsTable" prefHeight="506.0">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="120.0" text="Name"/>
                <TableColumn fx:id="categoryCol" prefWidth="100.0" text="Category"/>
                <TableColumn fx:id="priceCol" prefWidth="100.0" text="Price/kg"/>
                <TableColumn fx:id="originCol" prefWidth="100.0" text="Origin"/>
                <TableColumn fx:id="quantityCol" prefWidth="100.0" text="Quantity"/>
                <TableColumn fx:id="supplierCol" prefWidth="120.0" text="Supplier"/>
                <TableColumn fx:id="organicCol" prefWidth="80.0" text="Organic"/>
            </columns>
        </TableView>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</HBox>
