<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fillHeight="false" spacing="30.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.controllers.CarsController">

    <children>
        <!-- Left Side: Form Section -->
        <VBox prefHeight="507.0" prefWidth="288.0" spacing="10.0">
            <children>
                <!-- Form Grid -->
                <GridPane prefHeight="350.0" prefWidth="288.0" hgap="10.0" vgap="8.0">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="110.0" halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="184.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="46.0" />
                        <RowConstraints prefHeight="50.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                        <RowConstraints prefHeight="30.0" />
                    </rowConstraints>

                    <children>
                        <!-- Title -->
                        <Label text="Car Management" alignment="CENTER" prefWidth="288.0"
                               textFill="#f22828" GridPane.columnSpan="2" GridPane.rowIndex="0">
                            <font>
                                <Font name="Tahoma Bold" size="28.0" />
                            </font>
                        </Label>

                        <!-- Car Emoji Instead of Image -->
                        <Label text="ðŸš—" GridPane.columnSpan="2" GridPane.rowIndex="1"
                               GridPane.halignment="CENTER">
                            <font>
                                <Font size="48.0" />
                            </font>
                        </Label>

                        <!-- Brand Field -->
                        <Label text="Brand:" GridPane.rowIndex="2">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="brandFld" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                   promptText="e.g., Toyota"/>

                        <!-- Model Field -->
                        <Label text="Model:" GridPane.rowIndex="3">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="modelFld" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                   promptText="e.g., Camry"/>

                        <!-- Price Field -->
                        <Label text="Price:" GridPane.rowIndex="4">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="priceFld" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                   promptText="e.g., 25000.00"/>

                        <!-- Mileage Field -->
                        <Label text="Mileage:" GridPane.rowIndex="5">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="mileageFld" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                   promptText="e.g., 15000"/>

                        <!-- Engine Size Field -->
                        <Label text="Engine Size:" GridPane.rowIndex="6">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="engineSizeFld" GridPane.columnIndex="1" GridPane.rowIndex="6"
                                   promptText="e.g., 2.5"/>

                        <!-- Color Field -->
                        <Label text="Color:" GridPane.rowIndex="7">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="colorFld" GridPane.columnIndex="1" GridPane.rowIndex="7"
                                   promptText="e.g., Red"/>

                        <!-- Year Field -->
                        <Label text="Year:" GridPane.rowIndex="8">
                            <font><Font name="Arial" size="14.0" /></font>
                        </Label>
                        <TextField fx:id="yearFld" GridPane.columnIndex="1" GridPane.rowIndex="8"
                                   promptText="e.g., 2023"/>
                    </children>

                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </GridPane>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="addBtn" text="Add" onAction="#addCar"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                                prefHeight="35.0" prefWidth="85.0">
                            <font><Font name="Arial Bold" size="12.0" /></font>
                        </Button>

                        <Button fx:id="updateBtn" text="Update" onAction="#updateCar"
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                                prefHeight="35.0" prefWidth="85.0">
                            <font><Font name="Arial Bold" size="12.0" /></font>
                        </Button>

                        <Button fx:id="deleteBtn" text="Delete" onAction="#deleteCar"
                                style="-fx-background-color: #f44336; -fx-text-fill: white;"
                                prefHeight="35.0" prefWidth="85.0">
                            <font><Font name="Arial Bold" size="12.0" /></font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>

                <!-- Error/Success Message Display -->
                <Text fx:id="errorMsg" fill="RED" wrappingWidth="280.0" textAlignment="CENTER">
                    <font><Font name="Arial Bold" size="11.0" /></font>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Text>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>

        <!-- Right Side: Table Section -->
        <VBox spacing="10.0">
            <children>
                <!-- Table Header -->
                <Label text="Car Inventory" textFill="#333333">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                </Label>

                <!-- Cars Table -->
                <TableView fx:id="carsTable" prefHeight="506.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="brandCol" prefWidth="110.0" text="Brand"/>
                        <TableColumn fx:id="modelCol" prefWidth="110.0" text="Model"/>
                        <TableColumn fx:id="priceCol" prefWidth="110.0" text="Price ($)"/>
                        <TableColumn fx:id="mileageCol" prefWidth="110.0" text="Mileage"/>
                        <TableColumn fx:id="engineSizeCol" prefWidth="120.0" text="Engine Size (L)"/>
                        <TableColumn fx:id="colorCol" prefWidth="100.0" text="Color"/>
                        <TableColumn fx:id="yearCol" prefWidth="80.0" text="Year"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</HBox>